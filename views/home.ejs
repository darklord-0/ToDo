<html>
  <head>
    <link rel="stylesheet" href="/css/mystyle.css">
  </head>

  <body>
  

    <%- include('partials/header') %>

    <header id="header">TODO List</header>

    <div id="section">
      <div class="sectionhead">

        <form action="/todo" method="POST" enctype="multipart/form-data">

          <input placeholder="enter task" id="inputtodo" name="task" />
          <input type="file" name="todopic" accept= "image/*" required />
          <input type="submit" id="addtodo" value="+" />
        
        </form>

      </div>
      
      <div id="parent">
      
        <% data.forEach(function(todo){ %>
          <p> <%= todo.task %> </p>

          <form method="delete" action="/todo">
            <input name = "id" value="<%= todo.task %>" style="display:none" />
            <input type = "submit" value="X" />
          </form>

          <%= console.log(todo) %>
          <img src= " <%= todo.todopic %> " style="width:50px;height:50px;" />

        <% }) %>
      
      </div>

    </div>

    <!-- <footer>
      <p>MADE BY HARSHIT &#169; 2022</p>
    </footer> -->


  
  </body>
</html>